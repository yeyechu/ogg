<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#6898F3"
                android:endColor="#6898F3"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#6898F3" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="8px"
                android:top="36px"
                android:right="8px"
                android:bottom="36px"/>
        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/Primary_blue"
                android:endColor="@color/Primary_blue"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/Primary_blue" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="8px"
                android:top="36px"
                android:right="8px"
                android:bottom="36px"/>
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <gradient
                android:startColor="#75A0F3"
                android:endColor="#75A0F3"
                android:angle="90" />
            <stroke
                android:width="0dp"
                android:color="#75A0F3" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="8px"
                android:top="36px"
                android:right="8px"
                android:bottom="36px"/>
        </shape>
    </item>
    <!-- default -->
</selector>
