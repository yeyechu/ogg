<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.env.StartProjectActivity">

    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:maxHeight="45dp"
        android:minHeight="45dp"
        android:layout_gravity="left"
        android:src="@drawable/baseline_arrow_back_24"/>


    <EditText
        android:id="@+id/edit_project1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/small_padding"
        android:layout_margin="@dimen/big_padding"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_project2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/small_padding"
        android:layout_margin="@dimen/big_padding"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_project3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/small_padding"
        android:layout_margin="@dimen/big_padding"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_project4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/small_padding"
        android:layout_margin="@dimen/big_padding"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_project5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/small_padding"
        android:layout_margin="@dimen/big_padding"
        android:textSize="18sp" />

    <Button
        android:id="@+id/complete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:layout_margin="@dimen/big_padding"
        android:text="@string/button_save"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_test"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/test_user_item"
            android:padding="@dimen/small_padding" />

    </LinearLayout>

</LinearLayout>