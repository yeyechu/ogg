<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--배지 모음 페이지

1. 활성화 / 비활성화시 이미지 변경됨
2. 클릭시 배지 정보 알 수 있음
3. 변경 텍스트 : 보유한 배지 개수


-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/big_padding">

        <!-- 배지 타이틀 -->
        <LinearLayout
            android:id="@+id/my_content_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/big_padding">

            <ImageButton
                android:id="@+id/btn_badgeback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_arrow_back_ios_24"
                 />

            <TextView
                android:id="@+id/badge_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/nanumsquare_b"
                android:text="활동배지"
                android:textColor="@color/black"
                android:textSize="@dimen/title" />

        </LinearLayout>

        <!-- 배지 보유개수 -->
        <LinearLayout
            android:id="@+id/my_content_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_padding"
            >

            <TextView
                android:id="@+id/badge_cnt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/nanumsquare_b"
                android:text="보유한 배지 nn개"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title" />

        </LinearLayout>

        <!-- 배지 모음 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_padding"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피드 반응"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/badge_list1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/badge_item"


                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" >

            </androidx.recyclerview.widget.RecyclerView>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_padding"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/badge_list2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/badge_item"


                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" >

            </androidx.recyclerview.widget.RecyclerView>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_padding"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/badge_list3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/badge_item"


                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" >

            </androidx.recyclerview.widget.RecyclerView>





        </LinearLayout>






    </LinearLayout>

</ScrollView>
