<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/gage_layout"
    android:padding="@dimen/small_padding"
    >

    <!--말풍선-->

    <LinearLayout
        android:id="@+id/alarm_box_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <FrameLayout
            android:id="@+id/alarm_box_framelayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_co2_alarm_gage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="0.74kg 남았어요!"
                android:background="@drawable/box_mainblue"
                android:paddingTop="3.3dp"
                android:paddingBottom="3.3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/nanumsquare_eb" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:rotation="315"
                android:src="@drawable/orange_tail" />

        </FrameLayout>


    </LinearLayout>

    <!--그래프-->
    <ProgressBar
        android:id="@+id/determinateBar"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginLeft="@dimen/big_padding"
        android:layout_marginRight="@dimen/big_padding"
        android:layout_marginTop="5dp"
        android:progressDrawable="@drawable/progress_drawable"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="100"
        android:indeterminate="false"
        android:progress="9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/big_padding"
            android:layout_marginTop="5.3dp"
            android:layout_weight="2"
            android:text="0kg"
            android:textSize="12sp"
            android:fontFamily="@font/nanumsquare_r" />

        <TextView
            android:id="@+id/tv_co2_aim_gage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/big_padding"
            android:layout_marginTop="5.3dp"
            android:text="1kg"
            android:textSize="12sp"
            android:fontFamily="@font/nanumsquare_r" />

    </LinearLayout>


</LinearLayout>