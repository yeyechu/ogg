<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="984px"
    android:layout_height="400px"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="50px"
        android:layout_gravity="center"
        android:padding="48px"
        android:layout_margin="@dimen/small_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="48px"

            >


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="72px"
                android:gravity="center"

                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="13sp"
                android:autoSizeMaxTextSize="15sp"

                android:fontFamily="@font/nanumsquare_b"
                android:maxLines="1"
                android:text="나무 심기"

                 />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20px"
            android:layout_marginBottom="104px"
            >


            <TextView
                android:id="@+id/tv_co2_kr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"

                android:fontFamily="@font/nanumsquare_b"
                android:gravity="center"
                android:text="탄소 감축량"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_co2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/nanumsquare_r"
                android:text="0.023kg"
                android:textSize="10sp" />

        </LinearLayout>>

            <android.widget.Button
                android:id="@+id/btn"
                android:layout_width="218px"
                android:layout_height="80px"


                android:background="@drawable/button_skyblue"
                android:fontFamily="@font/nanumsquare_eb"


                android:padding="8px"
                android:text="인증하기"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>