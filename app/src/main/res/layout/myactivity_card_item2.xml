<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="984px"
    android:layout_height="320px"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/small_padding"
        android:padding="16dp"
        app:cardBackgroundColor="#D1EFB3"

        app:cardCornerRadius="50px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"


            android:layout_gravity="center_horizontal"

            android:orientation="vertical"

            >


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="72px"
                android:autoSizeMaxTextSize="15sp"

                android:autoSizeMinTextSize="13sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/nanumsquare_b"
                android:textColor="@color/black"

                android:gravity="center"
                android:maxLines="1"
                android:text="나무 심기"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_co2_kr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"

                    android:fontFamily="@font/nanumsquare_b"
                    android:gravity="center"
                    android:text="탄소 감축량"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_co2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/nanumsquare_r"
                    android:text="0.023kg"
                    android:textSize="10sp" />

            </LinearLayout>
            >

            <android.widget.Button
                android:id="@+id/btn"
                android:layout_width="218px"
                android:layout_height="80px"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_white"
                android:scaleType="centerInside"

                android:fontFamily="@font/nanumsquare_eb"
                android:gravity="center"

                android:padding="8px"
                android:text="인증하기"
                android:textColor="@color/Primary_blue"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"


            app:srcCompat="@drawable/baseline_add_photo_alternate_24" />

    </androidx.cardview.widget.CardView>

</LinearLayout>